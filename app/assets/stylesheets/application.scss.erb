@import "bootstrap-sprockets";
@import "bootstrap";
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700|Roboto:300,400,500');

// font-family: 'Roboto', sans-serif;
// font-family: 'Lato', sans-serif;

$primary-color: #0f1620;
$white-color: #ffffff;
$accent-color: #EC0A30;
$accent-light-color: #fa0c34;
$grey-color: #F5F5F5;
$grav-color: #4a1e69;
$grav-light-color: #502370;
$darken-color: rgba(0,0,0,0.9);

body {
  background-color: $primary-color;
  color: $primary-color;
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  text-align: center;
}

header {
  // height: 100vh;
}

h1 {
  font-size: 108px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;
}

h2 {
  font-size: 40px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;

}

h3 {
  font-size: 35px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;

}

h4 {
  font-size: 24px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;
}

.section-header {
  margin-bottom: 30px;
}

p {
  font-size: 20px;
}

a {
  color: $white-color;
  background-color: transparent;
}

.text-dark {
  color: $primary-color;
}

.text-white {
  color: $white-color;
}

.text-red {
  color: $white-color;
}

p a {
  text-decoration: underline;
}

a:hover, a:focus {
  color: $accent-color;
  text-decoration: none;
  transition: all 0.3s ease;
}

a:not( :focus ) {
  transition: all 0.3s ease;
}

p a:hover {
  text-decoration: underline;
}

.container {
  margin: 0px;
  border: 0px;
  width: 100%;
  background-color: transparent;
}

.nav-float {
  position: absolute;
  width: 100vw;
}

.navbar-default {
  background-color: transparent;
  border: none;
}

.navbar {
  background-color: transparent;
  border: none;
  margin: 50px;
}

.navbar-nav {
  margin: auto;
  display: inline-block;
  float: none;
  list-style-type: none;
  padding: 20px 30px;
  font-size: 18px;
  width: 100%;
  text-align: center;
}

.red-line {
  background-color: $accent-color;
  width: 6px;
  height: 260px;
  padding: 0px;
  margin: 0 8px;
  border: 0px;
  float: left;
}

// Banner Start

.banner-style {
  padding: 45vh 0em;
  height: 100vh;
  background-image: url('<%= asset_path "setup.png"%>');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  overflow: hidden;
}

.banner-margin {
  margin-top: -20vh;
}

.banner-text {
  width: 49%;
}


.web-dev-text {
  margin-top: 50px;
}

.align-left{
  text-align: left;
}

.align-right {
  text-align: right;
}

//banner end

.btn-primary {
  // background-color: $accent-color;
  background: linear-gradient(to right, $accent-color 50%, $accent-light-color 50%);
  background-size: 200% 100%;
  background-position:right bottom;
  border: none;
  border-radius: 3px;
  height: 45px;
  width: 170px;
  font-weight: 400;
  margin-top: 15px;
}

.btn:hover {
  background-color: $primary-color;
  background-position:left bottom;
  transition: all 0.4s ease;
}

.btn:active {
  background-color: $accent-light-color;
}
.btn:focus {
  background-color: $accent-light-color;
}

.btn-primary:active:hover {
  background-color: $accent-light-color;
}

.btn:not( :hover ) {
  background-position:right bottom;
  transition: all 0.4s ease;
}

.section-style {
  padding: 20em 10em;
  text-align: center;
}

.small-section-style {
  padding: 15em 10em;
  text-align: center;
}

.white-bg {
  background-color: $white-color;
  color: $primary-color;
}

.grey-bg {
  background-color: $grey-color;
  color: $primary-color;
}

.dark-bg {
  background-color: $primary-color;
  color: $white-color;
}

.red-bg {
  background-color: $accent-color;
  color: $white-color;
}

.photo {
  width: 240px;
  height: 240;
  margin: 0 3vw;
}

.icon {
  width: 60px;
  height: 60px;
  margin: 0 3vw;
}

//about start
.about-me {
  padding: 30vh 25vw;
  text-align: center;
}

// skills start
.skills-icon {
  font-size: 10em;
  margin: 50px 0;
  color: $primary-color;
}

.icon:hover {

}

.thick {
  border-top: 0px;
  height: 4px;
  margin: 0px;
}

.project-section {
  padding: 15em 15em;
  text-align: center;
}

.project-box {
  height: 420px;
  width: 31% !important;
  margin: 1%;
}

.project-trentr {
  background-color: $grey-color;
  color: $primary-color;
}

.project-pna {
  background-color: rgb(12, 12, 45);
  color: $white-color;
}

.hire-style{

}

.project-grav {
  // background: linear-gradient(to right, $grav-color 50%, $grav-light-color 50%);
  background-color: $grav-light-color;
  background-size: 200% 100%;
  background-position:right bottom;
  color: $white-color;
}

.project-grav:hover {
  background-position: left bottom;
  transition: all 0.6s ease;
  color: white;
}

.project-grav:not( :hover ) {
  background-position:right bottom;
  transition: all 0.6s ease;
}

.project-poke {
  background-color: #be1e39;
  color: $white-color;
}

.project-sub-text {
  font-size: 20px;
  margin: 5px;
}

.project-header {
  width: 20%
}

.project-circle {
  opacity:0.8;
  width: 150px;
  height: 150px;
  margin: 75px 15px 55px 15px;
}

.project-logo {
  opacity: 0.8;
  width: 18vw;
  margin: 75px 15px 55px 15px;
}

//Projects page

.project-page-section {
  padding: 10em 5em;
  text-align: center;
}

.project-page-icon {
  font-size: 26px;
  margin: 5px;
}

.project-img {
  max-width: 50vw;
  margin-bottom: 2vh;
}

.project-page-text {
  padding: 0 13vw;
}

//Contacts page

.map-bg {
  background-image: url("<%= asset_path 'map.png' %>");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.map-section-style {
  height: 100vh;
}

.map-text {
  margin-top: -8vh;
  min-width: 130px;
}

.email-form {
  margin: 10em 20em 0em 20em;
  min-width: 400px;
}

label {
  text-align: left;
  width: 100%;
  font-weight: 300;
}

.hire-style{
  background: linear-gradient(to right, $accent-color 50%, $accent-light-color 50%);
  background-size: 200% 100%;
  background-position:right bottom;
}

.hire-style:hover {
  background-position: left bottom;
  transition: all 0.6s ease;
  color: white;
}

.hire-style:not( :hover ) {
  background-position:right bottom;
  transition: all 0.6s ease;
}

//Fun Page

.zappar {
  width: 600px;
  height: 600px;
  padding: 5em;
}

//breakpoints
//1070px

.mini-banner, .red-line2 {
  display: none;
}

.red-line2 {
  background-color: $accent-color;
  width: 28vw;
  height: 6px;
  padding: 0px;
  margin: 0 8px 0 37.1vw;
  border: 0px;
  float: left;
}

@media only screen and (max-width: 1070px) {
  .red-line, .web-dev-text, .banner-para-style, .banner-text {
    display: none;
  }

  .align-left, .align-right {
    text-align: center;
  }

  .banner-text {
    width: 50%;
  }

  .mini-banner, .red-line2 {
    display: inline;
  }

  .nav {
    font-size: 22px;
  }

  .project-page-text {
    padding: 0 0 1vh 0;
  }

  .project-img {
    max-width: 75vw;
  }

  .project-section {
    height: 100vh;
  }

  .about-me {
    padding: 25vh 10vw;
  }

  h1 {
    font-size: 150px;
  }

  h2 {
    font-size: 60px;
  }

  h3 {
    font-size: 50px;
  }

  h4 {
    font-size: 42px;
  }

  p {
    font-size: 36px;
  }

  .email-text {
    font-size: 34px;
  }
}
