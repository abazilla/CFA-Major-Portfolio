@import "bootstrap-sprockets";
@import "bootstrap";
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700|Roboto:300,400,500');

// font-family: 'Roboto', sans-serif;
// font-family: 'Lato', sans-serif;

$primary-color: #131b28;
$white-color: #ffffff;
$accent-color: #EC0A30;
$accent-light-color: #fa0c34;
$grey-color: #F5F5F5;

body {
  background-color: $primary-color;
  color: $primary-color;
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  text-align: center;
}

header {
  // height: 100vh;
}

h1 {
  font-size: 108px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;

}

h2 {
  font-size: 40px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;

}

h3 {
  font-size: 35px;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;

}

.section-header {
  margin-bottom: 30px;
}

p {
  font-size: 20px;
}

a {
  color: $white-color;
  background-color: transparent;
}

.text-dark {
  color: $primary-color;
}

.text-white {
  color: $white-color;
}

a:hover, a:focus {
  color: $accent-color;
  text-decoration: none;
  transition: all 0.3s ease;
}

a:not( :focus ) {
  transition: all 0.3s ease;
}

a:active {
  color: $accent-color;
  text-decoration: none;
  background-color: transparent;
}

.container {
  margin: 0px;
  border: 0px;
  width: 100%;
  background-color: transparent;
}

.nav-float {
  position: absolute;
  width: 100vw;
}

.navbar-default {
  background-color: transparent;
  border: none;
}

.navbar {
  background-color: transparent;
  border: none;
  margin: 50px;
}

.navbar-nav {
  margin: auto;
  display: inline-block;
  float: none;
  list-style-type: none;
  padding: 20px 30px;
  font-size: 18px;
  width: 100%;
  text-align: center;
}

.banner-style {
  padding: 45vh 0em;
  height: 100vh;
}

.banner-margin {
  margin-top: -20vh;
}

.red-line {
  background-color: $accent-color;
  width: 6px;
  height: 260px;
  padding: 0px;
  margin: 0 8px;
  border: 0px;
  float: left;
}

.banner-text {
  width: 49%;
}


.web-dev-text {
  margin-top: 50px;
}

.align-left{
  text-align: left;
}

.align-right {
  text-align: right;
}

.btn-primary {
  // background-color: $accent-color;
  background: linear-gradient(to right, $accent-color 50%, $accent-light-color 50%);
  background-size: 200% 100%;
  background-position:right bottom;
  border: none;
  border-radius: 3px;
  height: 45px;
  width: 170px;
  font-weight: 400;
}

.btn:hover {
  background-color: $primary-color;
  background-position:left bottom;
  transition: all 0.4s ease;
}

.btn:not( :hover ) {
  background-position:right bottom;
  transition: all 0.4s ease;
}

.section-style {
  padding: 20em 10em;
  text-align: center;
}

.small-section-style {
  padding: 15em 10em;
  text-align: center;
}

.white-bg {
  background-color: $white-color;
  color: $primary-color;
}

.grey-bg {
  background-color: $grey-color;
  color: $primary-color;
}

.dark-bg {
  background-color: $primary-color;
  color: $white-color;
}

.red-bg {
  background-color: $accent-color;
  color: $white-color;
}

.photo {
  width: 240px;
  height: 240;
  margin: 0 3vw;
}

.icon {
  width: 60px;
  height: 60px;
  margin: 0 3vw;
}

.skills-icon {
  font-size: 10em;
  margin: 50px 0;
  color: $primary-color;
}

.icon:hover {

}

.thick {
  border-top: 0px;
  height: 4px;
  margin: 0px;
}

.project-section {
  padding: 15em 5em;
  text-align: center;
}

.project-box {
  height: 450px;
  border: 15px solid $white-color;
  padding: 5em 2em;
}

.project-blue {
  background-color: #0A8DEC;
  color: $white-color;
}

.project-pink {
  background-color: #e363a9;
  color: $white-color;
}

.project-orange {
  background-color: #ebaa2a;
  color: $white-color;
}

.project-sub-text {
  font-size: 14px;
}

//Projects page

.project-page-section {
  padding: 10em 5em;
  text-align: center;
}

//Contacts page

.map-bg {
  background-image: url("<%= asset_path 'map.png' %>");
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
}

.map-section-style {
  max-height: 90vh;
}

.email-form {
  margin: 10em 20em 0em 20em;
  min-width: 400px;
}

label {
  text-align: left;
  width: 100%;
  font-weight: 300;
}

.hire-style{
  background: linear-gradient(to right, $accent-color 50%, $accent-light-color 50%);
  background-size: 200% 100%;
  background-position:right bottom;
}

.hire-style:hover {
  background-position: left bottom;
  transition: all 0.6s ease;
  color: white;
}

.hire-style:not( :hover ) {
  background-position:right bottom;
  transition: all 0.6s ease;
}
